{
  "name": "freighter-mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint ./src ./__tests__ --fix",
    "lint:ts": "tsc --noEmit",
    "lint:ts:watch": "tsc --watch --noEmit",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint:check": "eslint ./src ./__tests__",
    "check": "yarn lint:ts && yarn lint:check && yarn format:check",
    "fix": "yarn lint && yarn format",
    "postinstall": "husky && yarn pod-install",
    "start": "react-native start",
    "start-c": "yarn start --reset-cache",
    "pod-install": "sh ./scripts/pod-install",
    "test": "jest",
    "test:watch": "jest --watch",
    "node-clean": "sh ./scripts/node-clean",
    "gradle-clean": "sh ./scripts/gradle-clean",
    "node-c-install": "yarn node-clean && yarn install",
    "gradle-c-install": "yarn gradle-clean && yarn install",
    "c-install": "yarn gradle-clean && yarn node-clean && yarn install",
    "reset-env": "sh ./scripts/reset-env",
    "r-install": "yarn reset-env && yarn install",
    "generate-splashscreen": "yarn react-native-bootsplash generate splashscreen/freighter-logo.svg --platforms=android,ios --background=161616 --logo-width=64 --assets-output=assets/bootsplash --flavor=main"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.26.9",
    "@react-native-clipboard/clipboard": "^1.16.1",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/native-stack": "^7.2.0",
    "@reduxjs/toolkit": "^2.5.1",
    "i18next": "^24.2.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "^15.4.1",
    "react-native": "0.77.1",
    "react-native-bootsplash": "^6.3.3",
    "react-native-responsive-screen": "^1.4.2",
    "react-native-safe-area-context": "^5.2.0",
    "react-native-screens": "^4.7.0",
    "react-native-svg": "^15.11.2",
    "react-redux": "^9.2.0",
    "styled-components": "^6.1.15"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@fnando/eslint-plugin-consistent-import": "*",
    "@react-native-community/cli": "15.1.3",
    "@react-native-community/cli-platform-android": "15.1.3",
    "@react-native-community/cli-platform-ios": "15.1.3",
    "@react-native/babel-preset": "0.77.1",
    "@react-native/eslint-config": "0.77.1",
    "@react-native/metro-config": "0.77.1",
    "@react-native/typescript-config": "0.77.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.0.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.1",
    "@types/react-redux": "^7.1.34",
    "@types/react-test-renderer": "^18.3.1",
    "@types/styled-components": "^5.1.34",
    "@types/styled-components-react-native": "^5.2.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-styled-components": "^7.2.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "react-native-svg-transformer": "^1.5.0",
    "react-test-renderer": "18.3.1",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  }
}
